#ðŸŽ¨ style.css (Style Guide Design)

body {
  font-family: 'Open Sans', sans-serif;
  background: #f4f4f4;
  margin: 0;
  padding: 20px;
  color: #333;
}
.container {
  max-width: 800px;
  margin: auto;
}
h1, h2 {
  font-family: 'Poppins', sans-serif;
}
.colors {
  display: flex;
  gap: 12px;
  margin-top: 10px;
}
.color-block {
  width: 120px;
  height: 100px;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 8px;
  font-weight: bold;
}
.primary { background: #007bff; }
.secondary { background: #6c757d; }
.accent { background: #f39c12; }
.bg { background: #f8f9fa; color: #333; }
.text { background: #343a40; }

.font-heading {
  font-family: 'Poppins', sans-serif;
  font-weight: 700;
  font-size: 24px;
}
.font-subheading {
  font-family: 'Poppins', sans-serif;
  font-weight: 600;
  font-size: 20px;
}
.font-body {
  font-family: 'Open Sans', sans-serif;
  font-weight: 400;
  font-size: 16px;
}

button {
  padding: 10px 20px;
  font-family: 'Poppins', sans-serif;
  border: none;
  border-radius: 6px;
  margin: 10px 10px 0 0;
  cursor: pointer;
}
.primary-btn {
  background: #007bff;
  color: white;
}
.secondary-btn {
  background: #6c757d;
  color: white;
}
